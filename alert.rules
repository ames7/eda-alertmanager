groups:
- name: service status and selinx
  rules:
  - alert: selinux disabled
    expr: node_selinux_current_mode == 0
    for: 10s
    labels:
      severity: page
    annotations:
      summary: "selinx disabled"

  - alert: httpdDown
    expr: absent(up{job="httpd"})
    for: 10s
    labels:
      severity: page
    annotations:
      summary: "httpd process is down"
